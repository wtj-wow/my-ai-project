  <script>
    function calculate() {
      const choice = Number(document.getElementById("choice").value);
      const nonChoice = Number(document.getElementById("nonChoice").value);
      const resultDiv = document.getElementById("result");

      // é˜²å‘†è™•ç†
      if (isNaN(choice) || isNaN(nonChoice)) {
        resultDiv.innerHTML = "è«‹è¼¸å…¥æœ‰æ•ˆæ•¸å­—å–” ğŸ“Œ";
        return;
      }

      if (choice < 0 || choice > 25) {
        resultDiv.innerHTML = "é¸æ“‡é¡Œé¡Œæ•¸å¿…é ˆåœ¨ 0 ~ 25 ä¹‹é–“ ğŸ“";
        return;
      }

      if (nonChoice < 0 || nonChoice > 6) {
        resultDiv.innerHTML = "éé¸é¡Œç´šåˆ†å¿…é ˆåœ¨ 0 ~ 6 ä¹‹é–“ ğŸ§ ";
        return;
      }

      const score = choice * 2.5 + nonChoice * 3.5;
      let level = "";

      if (score >= 93.2) level = "A++";
      else if (score >= 86.4) level = "A+";
      else if (score >= 76.4) level = "A";
      else if (score >= 66.2) level = "B++";
      else if (score >= 56.9) level = "B+";
      else if (score >= 38.1) level = "B";
      else level = "C";

      resultDiv.innerHTML = `åŠ æ¬Šåˆ†æ•¸ï¼š<strong>${score.toFixed(2)}</strong>ï¼Œç´šè·ï¼š<strong>${level}</strong><br><br>ğŸŒŸ å°æé†’ï¼šä½ ä¸æ˜¯è¢«åˆ†æ•¸å®šç¾©çš„äººï¼Œè€Œæ˜¯ç”¨åŠªåŠ›å®šç¾©åˆ†æ•¸çš„é‚£å€‹ç‹ è§’è‰²ï¼`;
    }
  </script>
